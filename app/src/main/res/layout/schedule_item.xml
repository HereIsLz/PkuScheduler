<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/TodoItemGridHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/ripple_corner_0dp_white"
    android:id="@+id/todo_item_container"
    >
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="48dp"
            android:layout_marginVertical="36dp"
            android:layout_marginStart="12dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_checkbox"
            android:background="@drawable/checkbox_ripple"
            android:id="@+id/todo_item_checkbox"
            />
        <!--com.airbnb.lottie.LottieAnimationView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginVertical="12dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="ButtonLoading.json"/-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/todo_item_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                style="@style/InterText"
                android:textFontWeight="700"
                android:singleLine="true"
                android:ellipsize = "end"
                android:textSize="@dimen/GridTitleTextSize"
                android:textColor="@color/uifabric_black"
                />

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/todo_item_duetime_icon"
                app:layout_constraintBottom_toTopOf="@id/todo_item_hashtag_icon"
                android:src="@drawable/ic_date_time_grey_24"
                android:scaleType="centerInside"
                />
            <TextView
                app:layout_constraintStart_toEndOf="@id/todo_item_duetime_icon"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toTopOf="@id/todo_item_hashtag_icon"
                android:id="@+id/todo_item_description"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                style="@style/InterText"/>
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/todo_item_hashtag_icon"
                android:src="@drawable/ic_add_file_grey_24"
                android:scaleType="centerInside"
                />
            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/todo_item_hashtag_icon"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:id="@+id/todo_item_eventtype"
                />
            <TextView
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:id="@+id/todo_item_coursesource"
                style="@style/GreyTag"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_corner_24dp_gray_50"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e040454f"
        android:textColor="@color/colorWhite"
        android:id="@+id/submit_status_sync_indicator"
        android:visibility="gone">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="0dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="Syncing.json"
            app:lottie_loop="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_recurring_24"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:id="@+id/sync_text_indicator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="正在检查教学网是否有提交记录"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
