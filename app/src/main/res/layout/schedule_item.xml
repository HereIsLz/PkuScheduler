<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/TodoItemGridHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/todo_item_container"
    >
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_marginVertical="17dp"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/todo_item_checkbox"
            />
        <!--com.airbnb.lottie.LottieAnimationView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginVertical="12dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="ButtonLoading.json"/-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/todo_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InterText"
                android:textFontWeight="700"
                android:singleLine="true"
                android:ellipsize = "end"
                android:textSize="@dimen/GridTitleTextSize"
                android:textColor="@color/uifabric_black"
                />

            <ImageView

                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/todo_item_duetime_icon"
                app:layout_constraintBottom_toTopOf="@id/todo_item_hashtag_icon"
                android:src="@drawable/ic_date_time_24"
                android:scaleType="centerInside"
                />
            <TextView
                app:layout_constraintStart_toEndOf="@id/todo_item_duetime_icon"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@id/todo_item_hashtag_icon"
                android:id="@+id/todo_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/InterText"/>
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="0dp"
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:id="@+id/todo_item_hashtag_icon"
                android:src="@drawable/ic_add_file_24"
                android:scaleType="centerInside"
                />
            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/todo_item_hashtag_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/todo_item_eventtype"
                style="@style/BlueTag"
                />
            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/todo_item_eventtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/todo_item_coursesource"
                style="@style/RedTag"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_corner_24dp_gray_50"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d040454f"
        android:textColor="@color/colorWhite"
        android:id="@+id/submit_status_sync_indicator"
        android:visibility="gone">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="0dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="Syncing.json"
            app:lottie_loop="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="正在检查教学网是否有提交记录"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
