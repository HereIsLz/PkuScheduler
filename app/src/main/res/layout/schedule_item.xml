<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/TodoItemGridHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/ripple_corner_8dp_accent_white"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="4dp"
    android:elevation="1.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/todo_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InterText"
            android:textFontWeight="700"
            android:textSize="@dimen/GridTitleTextSize"
            android:textColor="@color/uifabric_black"
            />
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/todo_item_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_timer_24px"
                android:scaleType="centerInside"
                />
            <TextView
                android:id="@+id/todo_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                style="@style/InterText"/>

        </LinearLayout>
        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todo_item_eventtype"
            style="@style/BlueTag"

            />
        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/todo_item_eventtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todo_item_coursesource"
            style="@style/RedTag"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
