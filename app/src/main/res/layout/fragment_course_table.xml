<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CourseListFragment"
    android:id="@+id/today_schedule_fragment_container">

    <View android:layout_width="60dp"
        android:id="@+id/today_schedule_fragment_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorInputField"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="61dp"

        android:id="@+id/today_schedule_table_container">
        <LinearLayout
            android:id="@+id/table_tab"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"

            android:baselineAligned="false">
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:textFontWeight="700"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/shape_corner_8dp_accent_blue"
                    android:id="@+id/text_first_date"
                    android:gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:textFontWeight="700"
                    android:id="@+id/text_second_date"
                    android:gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:textFontWeight="700"
                    android:id="@+id/text_third_date"
                    android:gravity="center"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            android:baselineAligned="false">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/table_first_column"
                android:layout_weight="1"
                android:layout_marginHorizontal="1dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/table_first_column_DDL"
                    android:elevation="1dp">
                </FrameLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/shape_now"
                    android:id="@+id/now_indicator_needle"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textFontWeight="700"
                    android:elevation="2dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/table_second_column"
                android:layout_weight="1"
                android:layout_marginHorizontal="1dp">
                <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/table_second_column_DDL"
                    android:elevation="1dp">
            </FrameLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/table_third_column"
                android:layout_weight="1"
                android:layout_marginHorizontal="1dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/table_third_column_DDL"
                    android:elevation="1dp">
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="@color/colorInputField"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView

        android:layout_marginEnd="6dp"
        android:minWidth="28dp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="@drawable/shape_now"
        android:id="@+id/now_indicator"
        android:layout_gravity="right"
        android:text="NOW"
        android:paddingHorizontal="12dp"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:textFontWeight="700"
        android:elevation="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>