<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:id="@+id/main_activity_page_container"
    android:background="@color/colorBrandingBlue"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_activity_item_switcher"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/shape_corner_24dp_darker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="SwitchPage"
            android:id="@+id/switcher_bakground"/>

        <Button
            android:id="@+id/switcher_float_button"
            android:layout_width="108dp"
            android:layout_height="36dp"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/ripple_corner_18dp_white"
            android:clickable="true"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="SwitchPage" />

        <TextView
            android:id="@+id/switcher_text_ddl"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:elevation="4dp"
            android:text="Deadline"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/switcher_text_table"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:elevation="4dp"
            android:text="课程表"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/main_activity_sync_indicator"
        android:layout_marginEnd="24dp"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/syncing_global_lottie_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            app:layout_goneMarginTop="0dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="SyncingGlobal.json"
            app:lottie_loop="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="同步中"/>

    </LinearLayout>


    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_activity_item_switcher"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="4dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_uppercorner_24dp_white">
<!--        <fragment android:name="com.example.pkuscheduler.Fragments.ScheduleListFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/schedule_list_fragment"/>-->
        <com.engrave.pkuscheduler.Components.NoScrollViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_activity_ViewPager"/>
        <com.engrave.pkuscheduler.Components.CircularCoverView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cover_color="@color/colorBrandingBlue"
            app:left_top_radius="8dp"
            app:right_top_radius="8dp"
            android:layout_marginBottom="0dp"
            app:left_bottom_radius="0dp"
            app:right_bottom_radius="0dp"
            />
    </FrameLayout>
    <ImageButton
        android:id="@+id/create_new_item_imagebutton"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ripple_corner_24dp_accent_red"
        android:src="@drawable/ic_add_new_event"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp"
        android:onClick="CreateNewToDoItem"
        />
</androidx.constraintlayout.widget.ConstraintLayout>