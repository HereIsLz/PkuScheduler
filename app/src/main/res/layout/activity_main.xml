<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:id="@+id/main_activity_page_container"
    android:background="@color/colorBrandingBlue"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_activity_item_switcher"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/shape_corner_24dp_darker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="108dp"
            android:layout_height="36dp"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/shape_white_input_field"
            android:clickable="true"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:elevation="4dp"
            android:text="Deadline"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:elevation="4dp"
            android:text="课程表"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_activity_item_switcher"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="2dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_uppercorner_24dp_white">
        <fragment android:name="com.example.pkuscheduler.Fragments.ScheduleListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/schedule_list_fragment"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ripple_corner_24dp_accent_red"
        android:src="@drawable/ic_add_new_event"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp"
        android:onClick="CreateNewToDoItem"
        />
</androidx.constraintlayout.widget.ConstraintLayout>