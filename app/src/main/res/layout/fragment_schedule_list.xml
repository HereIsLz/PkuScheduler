<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.ScheduleListFragment"
    android:paddingTop="4dp"
    android:paddingBottom="24dp">
    <LinearLayout
        android:id="@+id/schedule_list_empty_view_container"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/shape_corner_8dp_accent_red">
        <!--Decoration-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="没有TODO啦！！！"/>
    </LinearLayout>

    <com.example.pkuscheduler.Components.EmptySpecifiedRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:id="@+id/today_schedule_recycler_view"/>
</FrameLayout>