<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBrandingBlue</item>
        <item name="colorPrimaryDark">@color/colorBrandingBlue</item>
        <item name="colorAccent">@color/colorBrandingRed</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="InterText">
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="BlueTag">
        <item name="android:textColor">@color/colorBrandingBlue</item>
        <item name="android:background">@drawable/shape_corner_2dp_shallowblue</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="RedTag">
        <item name="android:textColor">@color/colorBrandingRed</item>
        <item name="android:background">@drawable/shape_corner_2dp_shallowred</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="GreyTag">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/shape_corner_2dp_shallowblue</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorBrandingBlue</item>
    </style>
</resources>
